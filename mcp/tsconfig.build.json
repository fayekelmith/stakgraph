{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "noEmit": false,
    "outDir": "./build",
    "rootDir": ".",
    "composite": false,
    "incremental": false,
    "declaration": false,
    "declarationMap": false,
    "module": "Node16",
    "target": "ES2022"
  },
  "include": [
    "src/**/*",
    "packages/tools/**/*"
  ],
  "exclude": [
    "src/**/*.test.ts",
    "src/**/*.spec.ts"
  ],
  "references": []
}
